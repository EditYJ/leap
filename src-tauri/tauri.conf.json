{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "leap",
  "version": "0.1.0",
  "identifier": "com.edityj.leap",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Leap",
        "width": 600,
        "height": 340,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "center": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "title": "Leap"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}